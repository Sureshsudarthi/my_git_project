pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'sqlplus username/password@db @create_tables.sql'
            }
        }
        stage('Test') {
            steps {
                sh 'sqlplus username/password@db @test.sql'
            }
        }
        stage('Deploy') {
            steps {
                sh 'sqlplus username/password@db @deploy.sql'
            }
        }
    }
}

